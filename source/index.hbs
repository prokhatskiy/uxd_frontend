			<div class="bfs__color-swatches__info">/* .green: */ color: #25B344;<br/>/* .bg-green: */ background: #25B344;</div>
			<div class="bfs__color-swatches__icon bg-dark"></div>
			<div class="bfs__color-swatches__info">/* .dark: */ color: #3E3E3E;<br/>/* .bg-dark: */ background: #3E3E3E;</div>
			<div class="bfs__color-swatches__icon bg-gray"></div>
			<div class="bfs__color-swatches__info">/* .gray: */ color: #D4D4D4;<br/>/* .bg-gray: */ background: #D4D4D4;</div>
		</div>
		<div class="bfs__buttons">
			<div class="bfs__buttons__options">
				<h1 class="green">BUTTONS</h1>
				<h3 class="sky">Buttons Options</h3>
				
				{{> buttons buttons.new }}


				<button type="button" class="btn btn_regular">
					<span class="btn_icon"></span>
					<span class="btn_text">Default Button</span>
				</button>
				<button type="button" class="btn btn_regular" disabled="disabled">
					<span class="btn_icon"></span>
					<span class="btn_text">Disable Button</span>
				</button>
				<button type="button" class="btn btn_regular btn_primary">
					<span class="btn_icon"></span>
					<span class="btn_text">Primary Button</span>
				</button>
				<button type="button" class="btn btn_regular btn_info">
					<span class="btn_icon"></span>
					<span class="btn_text">Info Button</span>
				</button>
				<button type="button" class="btn btn_regular btn_inverse">
					<span class="btn_icon"></span>
					<span class="btn_text">Inverse Button</span>
				</button>
				<button type="button" class="btn btn_regular btn_success">
					<span class="btn_icon"></span>
					<span class="btn_text">Success Button</span>
				</button>
				<button type="button" class="btn btn_regular btn_warning">
					<span class="btn_icon"></span>
					<span class="btn_text">Warning Button</span>
				</button>
				<button type="button" class="btn btn_regular btn_dange">
					<span class="btn_icon"></span>
					<span class="btn_text">Dange Button</span>
				</button>
			</div>
			<div class="bfs__buttons__sizes">
				<h3 class="sky">Buttons Sizes</h3>
				<button type="button" class="btn btn_huge btn_info">
					<span class="btn_icon"></span>
					<span class="btn_text">Huge Button</span>
				</button>
				<button type="button" class="btn btn_large btn_info">
					<span class="btn_icon"></span>
					<span class="btn_text">Large Button</span>
				</button>
				<button type="button" class="btn btn_regular btn_info">
					<span class="btn_icon"></span>
					<span class="btn_text">Regular Button</span>
				</button>
				<button type="button" class="btn btn_small btn_info">
					<span class="btn_icon"></span>
					<span class="btn_text">Small Button</span>
				</button>
				<button type="button" class="btn btn_xsmall btn_info">
					<span class="btn_icon"></span>
					<span class="btn_text">Very Small Button</span>
				</button>
			</div>
			<div class="bfs__buttons__variants">
				<h3 class="sky">Buttons Variants</h3>
				<button type="button" class="btn btn_regular btn_warning">
					<span class="btn_icon"></span>
					<span class="btn_text">Drop Button</span>
				</button>
				<button type="button" class="btn btn_regular btn_success btn_imgleft">
					<span class="btn_icon white-tw-icon"></span>
					<span class="btn_text">Drop Button</span>
				</button>
				<button type="button" class="btn btn_regular btn_primary btn_imgright">
					<span class="btn_icon select-icon-right-white"></span>
					<span class="btn_text">Select Button</span>
				</button>
				<button type="button" class="btn btn_regular btn_info btn_imgright">
					<span class="btn_icon white-tw-icon"></span>
					<span class="btn_text">Drop Button</span>	
				</button>
			</div>
		</div>
		<div class="bfs__check-radio-btns">
			<h3 class="sky">Checkboxes and Radio-Buttons</h3>
			<label class="radio"><input type="radio" name="options_radio" value="option1" checked><span></span>Radio is on</label>
			<label class="radio"><input type="radio" name="options_radio" value="option2"><span></span>Radio is off</label>
			<label class="radio"><input type="radio" name="options_radio" value="option3" disabled="disabled"><span></span>Radio is disabled</label>

			<label class="checkbox"><input type="checkbox" name="check" value="value1" checked><span></span>Checkbox is on</label>
			<label class="checkbox"><input type="checkbox" name="check" value="value2"><span></span>Checkbox is off</label>
			<label class="checkbox"><input type="checkbox" name="check" value="value3" disabled="disabled"><span></span>Checkbox is disabled</label>
		</div>
	</div>
	<div class="bfs__col bfs__col_2">
		<div class="bfs__typography">
			<h2 class="green">TYPOGRAPHY (Helvetica Neue)</h1>
			<h3 class="sky">Headings</h3>
			<div class="big-head">Big Head - Text 50 line-height 60</div>
