@import "icons/icons"
button
	&:focus
		outline none
	&:hover
		cursor pointer

.btn
	border-width 2px
	border-style solid
	font-family "Helvetica Neue", Helvetica, Arial, sans-serif
	font-weight normal
	font-style normal
	
	&-default
		background-color #FFF
		border-color $grey
		color $dark
	&-disable
		background-color $grey
		border-color $grey
	&-primary
		background-color $blue
		border-color $blue
	&-info
		background-color $sky
		border-color $sky
	&-inverse
		background-color $dark
		border-color $dark
	&-success
		background-color $green
		border-color $green
	&-warning
		background-color $yellow
		border-color $yellow
	&-dange
		background-color $red
		border-color $red
	&-disable,&-primary, &-info, &-inverse, &-success, &-warning, &-dange
		color #FFF

