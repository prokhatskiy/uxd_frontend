	&-huge
		font-size $font-size-2
		padding 19px 47px
	&-large
		font-size $font-size-3
		padding 17px 43px
	&-regular
		font-size $font-size-4
		padding 12px 27px
		max-height 50px
	&-small
		font-size $font-size-5
		padding 9px 12px
	&-xsmall
		font-size $font-size-6
		padding 6px 13px
	
	&-imgleft:before, &-imgright:after
		display inline-table
		vertical-align middle
		content ""
	&-imgleft:before
			margin-right 20px
	&-imgright:after
			margin-left 20px
	&-white-tw-ico
		&:before, &:after
			@extend .white-tw-ico
	&-select-ico
		&:before, &:after
			@extend .chevron-right-ico
	&-huge.btn-white-tw-ico
			&:before, &:after
				@extend .white-tw-ico-lg